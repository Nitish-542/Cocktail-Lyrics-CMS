@model MusicMixology.ViewModels.PairingViewModel

@{
    // Sets the page title in the ViewData dictionary
    ViewData["Title"] = "Delete Pairing";
}

// Header displaying confirmation message
<h2 class="mb-4">Are you sure you want to delete this pairing?</h2>

<!-- Display details of the pairing to be deleted -->
<dl class="row">
    <dt class="col-sm-3">Cocktail</dt>
    <dd class="col-sm-9">@Model.CocktailName</dd> <!-- Shows the cocktail name -->

    <dt class="col-sm-3">Song</dt>
    <dd class="col-sm-9">@Model.SongTitle</dd> <!-- Shows the song title -->

    <dt class="col-sm-3">Mood Category</dt>
    <dd class="col-sm-9">@Model.MoodCategory</dd> <!-- Shows the associated mood category -->
</dl>

<!-- Form to submit the delete action -->
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken() 
    <!-- Helps prevent Cross-Site Request Forgery (CSRF) attacks -->

    <input type="hidden" asp-for="PairingId" /> 
    <!-- Hidden input for pairing ID to identify the record -->
    
    <button type="submit" class="btn btn-danger">Delete</button> 
    <!-- Button to confirm deletion -->
    <a asp-action="Index" class="btn btn-secondary">Cancel</a> 
    <!-- Cancel button redirects to index/list page -->
</form>
