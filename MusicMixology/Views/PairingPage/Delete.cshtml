@model MusicMixology.ViewModels.PairingViewModel
@{
    ViewData["Title"] = "Delete Pairing";
}

<h2 class="mb-4">Are you sure you want to delete this pairing?</h2>

<dl class="row">
    <dt class="col-sm-3">Cocktail</dt>
    <dd class="col-sm-9">@Model.CocktailName</dd>

    <dt class="col-sm-3">Song</dt>
    <dd class="col-sm-9">@Model.SongTitle</dd>

    <dt class="col-sm-3">Mood Category</dt>
    <dd class="col-sm-9">@Model.MoodCategory</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PairingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
