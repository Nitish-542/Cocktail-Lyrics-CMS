@model MusicMixology.Models.CategoryDTO

@{
    // Setting the page title for the view
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>

<h4>Are you sure you want to delete this category?</h4>

<div>
    <!-- Displaying the category details for confirmation -->
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>
    </dl>
</div>

<!-- Form for deleting the category -->
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken() <!-- Token to prevent CSRF attacks -->
    <!-- Hidden field to pass the CategoryId to the action method -->
    <input type="hidden" asp-for="CategoryId" />
    <!-- Button to confirm deletion -->
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <!-- Button to cancel and return to the category index page -->
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
