@model MusicMixology.Models.CategoryDTO
@{
    ViewData["Title"] = "Category Details";
}

<h2 class="mb-4">Category Details</h2>

<div class="mb-3">
    <strong>Category Name:</strong> @Model.CategoryName
</div>

@if (Model.Cocktails != null && Model.Cocktails.Any())
{
    <h4 class="mt-4">Cocktails in this Category:</h4>
    <ul class="list-group">
        @foreach (var cocktail in Model.Cocktails)
        {
            <li class="list-group-item">
                <strong>@cocktail.Name</strong><br />
                <small>Recipe: @cocktail.Recipe</small>
            </li>
        }
    </ul>
}
else
{
    <p class="text-muted"><em>No cocktails in this category yet.</em></p>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Create" class="btn btn-success mb-3">Add New Category</a>
</div>

