@model MusicMixology.ViewModels.ArtistViewModel

@{
    ViewData["Title"] = "Artist Details"; // Sets the page title
}

<h2 class="mb-4">@Model.Name</h2>  <!-- Displays the artist's name -->

<hr />

<!-- Checks if the artist has albums and displays them -->
@if (Model.Albums != null && Model.Albums.Any())
{
    <h4>Albums</h4>  <!-- Section title for albums -->
    <ul>
        @foreach (var album in Model.Albums)
        {
            <li>@album.AlbumTitle</li>  <!-- Displays the title of each album -->
        }
    </ul>
}
else
{
    <p><em>No albums available.</em></p>  <!-- Message when no albums are available -->
}

<!-- Checks if the artist has songs and displays them -->
@if (Model.Songs != null && Model.Songs.Any())
{
    <h4 class="mt-4">Songs</h4>  <!-- Section title for songs -->
    <ul>
        @foreach (var song in Model.Songs)
        {
            <li>@song.Title (@song.Genre) - @song.AlbumTitle</li>  <!-- Displays song title, genre, and album -->
        }
    </ul>
}
else
{
    <p><em>No songs available.</em></p>  <!-- Message when no songs are available -->
}

<!-- Links for editing the artist and navigating back to the list -->
<a asp-action="Edit" asp-route-id="@Model.ArtistId" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
