@model MusicMixology.ViewModels.ArtistViewModel

@{
    // Set the page title for the view
    ViewData["Title"] = "Artist Details";
}

<!-- Display the artist's name as the page heading -->
<h2 class="mb-4">@Model.Name</h2>

<hr />

@* Check if the artist has any albums to display *@
@if (Model.Albums != null && Model.Albums.Any())
{
    <h4>Albums</h4>
    <ul>
        @* Loop through each album and display its title *@
        @foreach (var album in Model.Albums)
        {
            <li>@album.AlbumTitle</li>
        }
    </ul>
}
else
{
    @* Show message if no albums are available *@
    <p><em>No albums available.</em></p>
}

@* Check if the artist has any songs to display *@
@if (Model.Songs != null && Model.Songs.Any())
{
    <h4 class="mt-4">Songs</h4>
    <ul>
        @* Loop through each song and display its title, genre, and associated album title *@
        @foreach (var song in Model.Songs)
        {
            <li>@song.Title (@song.Genre) - @song.AlbumTitle</li>
        }
    </ul>
}
else
{
    @* Show message if no songs are available *@
    <p><em>No songs available.</em></p>
}

@* Edit and Back buttons for navigation *@
<a asp-action="Edit" asp-route-id="@Model.ArtistId" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
