@model MusicMixology.Models.AlbumDTO 
// The view receives a model of type AlbumDTO from the MusicMixology.Models namespace

@{
    ViewData["Title"] = "Delete Album"; 
    // Sets the page title for the browser and layout
}

<h2 class="mb-4">Are you sure you want to delete this album?</h2> // Heading prompt to confirm deletion

<div class="mb-3">
    <h4>@Model.AlbumTitle</h4> 
    // Displays the album title from the model

    <dl class="row"> 
        // Description list for displaying label and value pairs
        <dt class="col-sm-2">Artist</dt> // Label: Artist
        <dd class="col-sm-10">@Model.ArtistName</dd> 
        // Value: Artist name from the model
    </dl>
</div>

<form asp-action="Delete" method="post"> 
    // Form that submits to the Delete action (POST)
    @Html.AntiForgeryToken() 
    // Protects against CSRF attacks
    <input type="hidden" asp-for="AlbumId" /> 
    // Hidden input to pass the AlbumId to the server
    <button type="submit" class="btn btn-danger">Delete</button> 
    // Button to confirm and submit deletion
    <a asp-action="Index" class="btn btn-secondary">Cancel</a> 
    // Link to cancel and go back to the index/list page
</form>
