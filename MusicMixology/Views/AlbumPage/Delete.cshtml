@* 
    Razor View for confirming album deletion.
    Displays album title and artist, and asks the user to confirm the deletion.
    Submits the deletion via POST with anti-forgery protection.
*@
@model MusicMixology.Models.AlbumDTO

@{
    // Sets the page title
    ViewData["Title"] = "Delete Album";
}

<h2 class="mb-4">Are you sure you want to delete this album?</h2>

<div class="mb-3">
    <h4>@Model.AlbumTitle</h4>

    <dl class="row">
        <dt class="col-sm-2">Artist</dt>
        <dd class="col-sm-10">@Model.ArtistName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @* Includes anti-forgery token for security *@
    @Html.AntiForgeryToken()

    @* Hidden input to pass the AlbumId back to the controller *@
    <input type="hidden" asp-for="AlbumId" />

    @* Submit button for confirming deletion *@
    <button type="submit" class="btn btn-danger">Delete</button>

    @* Cancel button that navigates back to the album index *@
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
