@model IEnumerable<MusicMixology.Models.SongDTO>

@{
    // Set the title for the page
    ViewData["Title"] = "Songs";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<p>
    <!-- Button to navigate to create a new song -->
    <a asp-action="Create" class="btn btn-success">Add New Song</a>
</p>

<!-- Table to display list of songs -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <!-- Column headers for song details -->
            <th>Title</th>
            <th>Artist</th>
            <th>Album</th>
            <th>Genre</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)  // Iterate through each song in the model
        {
            <tr>
                <!-- Display song information -->
                <td>@song.Title</td>
                <td>@song.ArtistName</td>
                <td>@(string.IsNullOrEmpty(song.AlbumTitle) ? "-" : song.AlbumTitle)</td>  // Display '-' if no album title
                <td>@song.Genre</td>
                <td>
                    <!-- Action buttons for viewing, editing, or deleting a song -->
                    <a asp-action="Details" asp-route-id="@song.SongId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@song.SongId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@song.SongId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
