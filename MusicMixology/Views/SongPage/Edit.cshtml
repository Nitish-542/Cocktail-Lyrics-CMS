@model MusicMixology.ViewModels.SongViewModel

@{
    // Sets the page title for the view
    ViewData["Title"] = "Edit Song";
}

<!-- Page Heading -->
<h2 class="mb-4">@ViewData["Title"]</h2>

<!-- Edit Song Form -->
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken() <!-- Protects against Cross-Site Request Forgery (CSRF) -->

    <!-- Hidden field to hold the Song ID (used for editing existing records) -->
    <input type="hidden" asp-for="SongId" />

    <!-- Display model validation errors -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Song Title Input -->
    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Artist Dropdown Selector -->
    <div class="form-group mb-3">
        <label asp-for="ArtistId" class="form-label"></label>
        <select asp-for="ArtistId" class="form-control" asp-items="Model.ArtistList">
            <option value="">-- Select Artist --</option>
        </select>
        <span asp-validation-for="ArtistId" class="text-danger"></span>
    </div>

    <!-- Album Dropdown Selector -->
    <div class="form-group mb-3">
        <label asp-for="AlbumId" class="form-label"></label>
        <select asp-for="AlbumId" class="form-control" asp-items="Model.AlbumList">
            <option value="">-- Select Album --</option>
        </select>
        <span asp-validation-for="AlbumId" class="text-danger"></span>
    </div>

    <!-- Genre Input Field -->
    <div class="form-group mb-4">
        <label asp-for="Genre" class="form-label"></label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <!-- Submit and Cancel Buttons -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<!-- Validation Scripts Section -->
@section Scripts {
    @{
        // Renders client-side validation scripts (e.g., jQuery validation)
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
