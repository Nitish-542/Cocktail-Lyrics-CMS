@model MusicMixology.Models.SongDTO

@{
    ViewData["Title"] = "Delete Song"; // Sets the title of the page to "Delete Song"
}

<h2 class="mb-4">Are you sure you want to delete this?</h2>

<div class="mb-3">
    <!-- Display the song details that will be deleted -->
    <h4>@Model.Title</h4>

    <dl class="row">
        <dt class="col-sm-2">Artist</dt>
        <dd class="col-sm-10">@Model.ArtistName</dd>

        <dt class="col-sm-2">Album</dt>
        <!-- Display album name, or a dash if it's null or empty -->
        <dd class="col-sm-10">@(!string.IsNullOrEmpty(Model.AlbumTitle) ? Model.AlbumTitle : "-")</dd>

        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Genre</dd>
    </dl>
</div>

<!-- Form to handle the delete action -->
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()  <!-- Provides security against CSRF attacks -->
    <input type="hidden" asp-for="SongId" />  <!-- Hidden input to pass the song ID for deletion -->
    <button type="submit" class="btn btn-danger">Delete</button>  <!-- Submit button to confirm deletion -->
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>  <!-- Link to cancel the deletion and return to the list -->
</form>
