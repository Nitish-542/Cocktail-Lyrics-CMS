@model IEnumerable<MusicMixology.Models.BartenderDto>
@{
    // Set the page title to "Bartenders"
    ViewData["Title"] = "Bartenders";
}

<h2>Bartenders</h2>

<p>
    <!-- Button to navigate to the 'Create' action for adding a new bartender -->
    <a asp-action="Create" class="btn btn-success">Add New Bartender</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th> <!-- Column header for Bartender's Name -->
            <th>Actions</th> <!-- Column header for action buttons -->
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model) // Loop through each bartender in the model
        {
            <tr>
                <td>@b.Name</td> <!-- Display Bartender's Name -->
                <td>
                    <!-- Action buttons for Details, Edit, and Delete -->
                    <a asp-action="Details" asp-route-id="@b.BartenderId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@b.BartenderId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@b.BartenderId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
