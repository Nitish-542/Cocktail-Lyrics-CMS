@model MusicMixology.Models.BartenderDto

@{
    // Sets the title of the page shown in the browser/tab
    ViewData["Title"] = "Edit Bartender";
}

<h2>Edit Bartender</h2>

<!-- 
    Form for editing an existing bartender. 
    Submits POST request to 'Edit' action of the current controller.
-->
<form asp-action="Edit" method="post">
    @* Includes anti-forgery token to prevent CSRF attacks *@
    @Html.AntiForgeryToken()

    @* Hidden field to hold the Bartender ID (used for identifying which bartender to update) *@
    <input type="hidden" asp-for="BartenderId" />

    <!-- Name Input Field -->
    <div class="form-group">
        @* Label for the Name input *@
        <label asp-for="Name" class="control-label"></label>

        @* Input textbox for Name property of the model *@
        <input asp-for="Name" class="form-control" />

        @* Displays validation message for Name if validation fails *@
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Submit and Cancel Buttons -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @* Renders client-side validation scripts (jQuery Validation, Unobtrusive Validation) *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
