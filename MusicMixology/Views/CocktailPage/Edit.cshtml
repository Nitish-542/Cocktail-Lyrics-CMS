@model MusicMixology.Models.CocktailDTO

<h2>Edit Cocktail</h2>

<!-- Form to edit an existing cocktail -->
<form asp-action="Edit" method="post">
    <!-- Hidden input field to store the CocktailID for editing the specific cocktail -->
    <input type="hidden" asp-for="CocktailID" />

    <!-- Input field for the cocktail name -->
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <!-- Textarea input field for the cocktail recipe -->
    <div class="form-group">
        <label asp-for="Recipe"></label>
        <textarea asp-for="Recipe" class="form-control"></textarea>
    </div>

    <!-- Input field for liquor ingredients -->
    <div class="form-group">
        <label asp-for="LiqIns"></label>
        <input asp-for="LiqIns" class="form-control" />
    </div>

    <!-- Input field for mix ingredients -->
    <div class="form-group">
        <label asp-for="MixIns"></label>
        <input asp-for="MixIns" class="form-control" />
    </div>

    <!-- Dropdown for selecting the cocktail category -->
    <div class="form-group">
        <label>Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>

    <!-- Dropdown for selecting the bartender who created or will create the cocktail -->
    <div class="form-group">
        <label>Bartender</label>
        <select asp-for="BartenderId" asp-items="ViewBag.Bartenders" class="form-control"></select>
    </div>

    <!-- Submit button to save changes to the cocktail -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
