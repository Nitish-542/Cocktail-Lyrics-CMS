@model MusicMixology.Models.CocktailDTO

@* Page Title *@
<h2>Edit Cocktail</h2>

@* Begin Form to submit edited cocktail details using POST method *@
<form asp-action="Edit" method="post">
    
    @* Hidden input to retain the unique Cocktail ID (used during update) *@
    <input type="hidden" asp-for="CocktailID" />

    @* Input field for Cocktail Name *@
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    @* Textarea for entering or editing the cocktail recipe *@
    <div class="form-group">
        <label asp-for="Recipe"></label>
        <textarea asp-for="Recipe" class="form-control"></textarea>
    </div>

    @* Input for listing Liquor Ingredients (LiqIns) *@
    <div class="form-group">
        <label asp-for="LiqIns"></label>
        <input asp-for="LiqIns" class="form-control" />
    </div>

    @* Input for listing Mixer Ingredients (MixIns) *@
    <div class="form-group">
        <label asp-for="MixIns"></label>
        <input asp-for="MixIns" class="form-control" />
    </div>

    @* Dropdown to select a Category, options populated via ViewBag.Categories *@
    <div class="form-group">
        <label>Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>

    @* Dropdown to select a Bartender, options populated via ViewBag.Bartenders *@
    <div class="form-group">
        <label>Bartender</label>
        <select asp-for="BartenderId" asp-items="ViewBag.Bartenders" class="form-control"></select>
    </div>

    @* Submit button to save changes made to the cocktail *@
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
